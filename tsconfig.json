{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es6",  // Change this to "es6" or another ES version supporting private identifiers
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "src/example/**/*"]
}
